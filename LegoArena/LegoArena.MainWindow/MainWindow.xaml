<Window x:Class="LegoArena.MainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegoArena.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label x:Name="Title" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20">LEGO ARENA</Label>
        <Image x:Name="ImageLeft" Grid.Row="2" />
        <Image x:Name="ImageRight" Grid.Column="2" Grid.Row="2" />
        <StackPanel Grid.Column="1" Grid.Row="2" VerticalAlignment="Center">
            <Button x:Name="FindHome" Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Width="85" Margin="7" Background="BlanchedAlmond" Foreground="Black">Find Home</Button>
            <Button x:Name="FindSequence" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Width="85" Margin="7" Background="BlanchedAlmond" Foreground="Black">Find Sequence</Button>
            <Button x:Name="FindBlock" Grid.Column="1" Grid.Row="2" VerticalAlignment="Bottom" Width="85" Margin="7" Background="BlanchedAlmond" Foreground="Black">Find Block</Button>
        </StackPanel>
        
            <StackPanel Grid.Column="0" Grid.Row="1">
                <Label x:Name="Gyro">Gyro Sensor: </Label>
                <Label x:Name="UltraSonic">UltraSonic Sensor: </Label>
            <Label x:Name="Colour">Color Sensor</Label>
            </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label x:Name="GyroValue"></Label>
            <Label x:Name="UltraSonicValue"></Label>
            <Label x:Name="ColourValue"></Label>
        </StackPanel>

    </Grid>
</Window>
